// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Section{
  id Int @id @default(autoincrement())
  name String
  description String?
  url Url[]
  subsection Subsection[]
  documents Documents[]
}

model Url{
  id Int @id @default(autoincrement())
  url String
  section Section? @relation(fields: [sectionId], references: [id])
  sectionId Int
  subsection Subsection? @relation(fields: [subsectionId], references: [id])
  subsectionId Int
}

model Subsection{
  id Int @id @default(autoincrement())
  name String
  description String?
  section Section @relation(fields: [sectionId], references: [id])
  sectionId Int
  documents Documents[]
  url Url[]
}

model Documents{
  id Int @id @default(autoincrement())
  name String
  description String?
  date DateTime
  size String
  subsection Subsection? @relation(fields: [subsectionId], references: [id])
  subsectionId Int
  section Section? @relation(fields: [sectionId], references: [id])
  sectionId Int
}

